<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Settings">

    <TextView android:text="1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a_0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/a_1"
        android:layout_below="@+id/a_0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/a_2"
        android:layout_below="@+id/a_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/g_0"
        android:layout_above="@+id/a_1"
        android:layout_toRightOf="@+id/a_0"
        android:layout_toEndOf="@+id/a_0"
        android:layout_marginLeft="102dp"
        android:layout_marginStart="102dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/g_1"
        android:layout_below="@+id/g_0"
        android:layout_alignRight="@+id/g_0"
        android:layout_alignEnd="@+id/g_0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/g_2"
        android:layout_below="@+id/g_1"
        android:layout_alignLeft="@+id/g_1"
        android:layout_alignStart="@+id/g_1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/a_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/A_plot"></LinearLayout>

</RelativeLayout>
